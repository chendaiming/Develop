	<item id="select_query_area" desc="区域查询">
	<sql>
		SELECT 
				''||odd_id        id,
				''||odd_parent_id pid,
				odd_name            name,
				'org.png'           icon,
		        0					type
		FROM sys_org_dept_dtls
		WHERE level # :level
		START WITH odd_id=:org CONNECT BY PRIOR odd_id = odd_parent_id 
		UNION ALL
		SELECT 
				''||abd_area_id id,
				''||abd_parent_id pid,
				abd_area_name name,
				'area.png'   icon,
				1            type
		 FROM
       			com_area_base_dtls
         WHERE
         		abd_cus_number=:org
     </sql>
	</item>
	<item id="select_address_by_org" desc="根据刷卡地点查询">
		<sql>
			SELECT 
					'1-'||odd_id        id,
					'1-'||odd_parent_id pid,
					odd_name            name,
					'org.png'           icon,
			        0					type,
			        odd_seq 			seq
			FROM sys_org_dept_dtls
			WHERE level # :level
			START WITH odd_id=:org CONNECT BY PRIOR odd_id = odd_parent_id 
			UNION ALL	
			SELECT
				id,
				pid,
				name,
				icon,
        		type,
        		seq
			FROM
			(
			SELECT 
				''||dbd_id           id,
				'1-'||dbd_area_id    pid,
				dbd_name             name,
				'address.png'			 icon,
        		1					type,
        		dbd_seq  			seq
			FROM 
				dor_door_base_dtls
			UNION ALL
			SELECT 
				'1-'||abd_area_id      id,
				'1-'||abd_parent_id	  pid,
				abd_area_name         name,
				'area.png'			  icon,
        		0					  type,
        		abd_seq   			  seq
			FROM
				com_area_base_dtls
			)t
		</sql>
		<where id="0" desc="非省局用户登录">
			 where t.orgid=:org
		</where>
		<order id="0">
			 ORDER　By seq
		</order>
	</item>
	<item id="select_plc_by_orgid" desc="根据刷卡人查询">
	<sql>
		SELECT 
				'1-'||odd_id        id,
				'1-'||odd_parent_id pid,
				odd_name            name,
				'org.png'           icon,
		        0					type
		FROM sys_org_dept_dtls
		
		WHERE level # :level
		START WITH odd_id=:org CONNECT BY PRIOR odd_id = odd_parent_id 
		UNION ALL
		SELECT 
		    ''||pbd_police_id id,
		    '1-'||pbd_drptmnt_id pid,
		    pbd_police_name name,
		    'user.png' icon,
		    1 type
		FROM 
			plc_police_base_dtls
		UNION ALL
		SELECT 
			'1-'||odd_id  id,
			'1-'||odd_parent_id pid,
			odd_name name,
			'org.png' icon,
			0 type
		FROM
			sys_org_dept_dtls
		START WITH   
	      odd_parent_id=:org
	     CONNECT by odd_id=odd_parent_id
	 </sql>
